{{ 'slideshow.css' | asset_url | stylesheet_tag }}

<script src="{{ 'slideshow.js' | asset_url }}" defer="defer"></script>

<div class="page-width page-width--narrow spaced-section">
  <div class="slide-wrapper">
    <div id="arrow-left" class="arrow"> </div>

      {% if section.settings.image != blank %}
        <div class="slide slide1">
          <div class="slide-content">
            <span class="imgtop" style="background-image: url('{{ section.settings.image | img_url: '1500x' }}')"></span>
          </div>
        </div>
      {% endif %}

      {% if section.settings.image_2 != blank %}
        <div class="slide slide2">
          <div class="slide-content">
            <span class="imgtop" style="background-image: url('{{ section.settings.image_2 | img_url: '1500x' }}')"></span>
          </div>
        </div>
      {% endif %}
      
      {% if section.settings.image_3 != blank %}
        <div class="slide slide3">
          <div class="slide-content">
            <span class="imgtop" style="background-image: url('{{ section.settings.image_3 | img_url: '1500x' }}')"></span>
          </div>
        </div>
      {% endif %}

      {% if section.settings.image_4 != blank %}
        <div class="slide slide4">
          <div class="slide-content">
            <span class="imgtop" style="background-image: url('{{ section.settings.image_4 | img_url: '1500x' }}')"></span>
          </div>
        </div>
      {% endif %}

      {% if section.settings.image_5 != blank %}
        <div class="slide slide5">
          <div class="slide-content">
            <span class="imgtop" style="background-image: url('{{ section.settings.image_5 | img_url: '1500x' }}')"></span>
          </div>
        </div>
      {% endif %}

    <div id="arrow-right" class="arrow"> </div>
  </div>
  <h3>{{ section.settings.caption }}</h3>
</div>

{% schema %}
{
  "name": "Slideshow",
  "tag": "section",
  "class": "slideshow",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Slideshow"
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "caption",
      "label": "Slideshow caption"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image 4"
    },
    {
      "type": "image_picker",
      "id": "image_5",
      "label": "Image 5"
    }
  ],
  "presets": [
    {
      "name": "Slideshow",
      "category": "Images"
    }
  ]
}
{% endschema %}
